{
  "name": "travel-ka",
  "version": "0.0.0",
  "description": "A site for managing trains and their schedules",
  "repository": "https://github.com/nieltg/travel-ka",
  "author": "nieltg",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p . --fix",
    "prepublish": "$npm_execpath run build",
    "start:dev": "nodemon",
    "start": "node dist/cli"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/faker": "^4.1.4",
    "@types/knex": "^0.14.25",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.32",
    "@types/koa-views": "^2.0.3",
    "@types/node": "^10.11.0",
    "@types/pug": "^2.0.4",
    "autofail": "^0.0.1",
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/koa-mount": "^3.0.1",
    "@types/koa-static": "^4.0.0",
    "knex": "^0.15.2",
    "koa": "^2.5.3",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "pg": "^7.4.3",
    "pug": "^2.0.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "tslint -p . --fix",
      "git add"
    ],
    "package-lock.json": [
      "autofail echo Please use yarn to add/remove packages."
    ]
  },
  "prettier": {
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nodemonConfig": {
    "exec": "node --inspect -r ts-node/register src/cli",
    "watch": [
      "src/"
    ],
    "ext": "js,jsx,ts,tsx"
  }
}
