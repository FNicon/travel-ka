{
  "name": "travel-ka",
  "version": "0.0.0",
  "description": "A site for managing trains and their schedules",
  "repository": "https://github.com/nieltg/travel-ka",
  "author": "nieltg",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p . --fix",
    "prepublish": "$npm_execpath run build",
    "start:dev": "ts-node --inspect server --watch",
    "start": "node dist/cli"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.32",
    "@types/node": "^10.11.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/yargs": "^12.0.0",
    "chokidar": "^2.0.4",
    "koa": "^2.5.3",
    "koa-router": "^7.4.0",
    "yargs": "^12.0.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "tslint -p . --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}